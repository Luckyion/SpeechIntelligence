<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nfc_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="SN:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/cur_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="PWD:"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nfc_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="16"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/nfc_pwd_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/nfc_pwd_crack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="读取"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/nfc_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="读取"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/nfc_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="读取"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>